<section id="todoapp">
    <header id="header">
        <h1>todos</h1>
       {{new-todo-input createTodoAction="createTodo"}}
    </header>
    <section id="main">
        <ul id="todo-list">
          {{#each model as |todo|}}
              {{todo-item item=todo toggleTodoItemAction="toggleTodo"}}
          {{/each}}
        </ul>

        <input type="checkbox" id="toggle-all">
    </section>

    <footer id="footer">
        <span id="todo-count">
          <strong>2</strong> todos left
        </span>
        <ul id="filters">
            <li>
                <a href="all" class="selected">All</a>
            </li>
            <li>
                <a href="active">Active</a>
            </li>
            <li>
                <a href="completed">Completed</a>
            </li>
        </ul>

        <button id="clear-completed">
            Clear completed (1)
        </button>
    </footer>
</section>